accounts = {}
log_user = None
lib_book = {}

#Spaces
def space():
    print("\n")
    return
#Initial Choices login/register choices
def ini_Choc():
    while True:
        ad_user = int(input("1. Admin Login\n2. Register Account\n3. Log in existing account\n"))
        if ad_user == 1:
            admin_acc()
        elif ad_user == 2:
            coa()
        elif ad_user == 3:
            login_process()
        else:
            print("Invalid Input")
            space()

#User Commands
def user_comm():
    while True:
        usr_com = int(input("1. Enter Library\n2. Log-out "))
        if user_comm == 1:
            print("blank")
        elif user_comm == 2:
            ini_Choc()
#Admin Powers!
def view_accounts():
    if not accounts:
        print("N/A")
        return
    print("Registered Accounts:")
    for log in accounts:
        print(f"- {log}") 
def ad_control():
    ad_con = int(input("1. add books\n2. View Accounts\n3. return log-in menu\n Choose Commands: "))
    if ad_con == 1:
        print("blank for now")
    elif ad_con == 2:
        view_accounts()
        space()
        ad_control()
    elif ad_con == 3:
        ini_Choc()
    else:
        print("Invalid Choice\n")
        ad_control()
    space()


#Admin Default Account
def admin_acc():
    a = 0
    while a < 3:
        print("  ADMIN LOGIN  ")
        log = input("USERNAME: ")
        pw = input("PASSWORD: ")
        space()

        if log.lower() == "admin" and pw == "admin1234":
            print("Successful Log in")
            ad_control()
            return True
        else:
            print(f"{2-a} Attempts Remaining.")
            a += 1
    ac_loc()
    space()


def ac_loc():
    acc_lock = input("Locked...\nreturn login page type yes: ")
    if acc_lock.lower() == "yes":
        ini_Choc()
    else:
        print("Wrong Input")
        return False


#Creation of Account
def coa():
    print("  CREATE YOUR ACCOUNT TO CONTIUE!  ")
    log = input("Username: ")
    if log in accounts:
        print("Username Already in Use.")
        return log
    pw = input("Password: ")
    accounts[log] = pw
    login_process()
    space()
    return log, pw

#Account Library
def login_process():
    if not accounts:
    print("No accounts were created.")

    else:
    a = 0
    while a < 3:
        global log_user
    
        print("  LOGIN YOUR ACCOUNT  ")
        log = input("USERNAME: ")
        pw = input("PASSWORD: ")

        space()

        if log in accounts and accounts[log] == pw :
            print("Successful Log in")
            space()
            return True
        else:
            print(f"{2-a} Attempts Remaining.")
            a += 1


    ac_loc()
    return False

ini_Choc()

