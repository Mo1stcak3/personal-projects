def space():
    print("\n")
    return

def book_choices():
    print("Welcome to the Library!\n")
    print("Here are the Books Available! \n")
    books = int(input(
"1. Atomic Habits by James Clear\n"

"2. The 7 Habits of Highly Effective People by Stephen R. Covey\n"

"3. The Power of Now by Eckhart Tolle\n"


"4. Mindset: The New Psychology of Success by Carol S. Dweck\n"


"5. The Subtle Art of Not Giving a F*ck by Mark Manson\n"
"Select A book: "


))
    
    if books == 1:
        rvprv = print("Review: Readers praise its practical strategies for building good habits and breaking bad ones.\n\n"

"Preview: Clear explains how tiny changes compound into remarkable results, using real-life examples and science-backed methods.\n\n\n")

        print("1. Atomic Habits by James Clear\n")

        krpr_choice(rvprv)
                

    elif books == 2:
        rvprv = print("Review: Considered a timeless classic, reviewers highlight its focus on character ethics and long-term success.\n"

    "Preview: Covey introduces habits like 'Be Proactive' and 'Begin with the End in Mind' to transform personal and professional effectiveness.\n\n"
    )
        print("2. The 7 Habits of Highly Effective People by Stephen R. Covey\n")

        krpr_choice(rvprv)

    elif books == 3:
        rvprv = print("Review: Widely acclaimed for its spiritual depth, reviewers note how it helps reduce anxiety by focusing on the present moment.\n"

    "Preview: Tolle guides readers to detach from past regrets and future worries, emphasizing mindfulness and inner peace.\n\n")
        print("3. The Power of Now by Eckhart Tolle\n")

        krpr_choice(rvprv)
                
        
    elif books == 4:
        rvprv = print("Review: Readers appreciate its research-based insights into growth vs. fixed mindsets, especially in education and leadership.\n"
        
    "Preview: Dweck shows how adopting a growth mindset can unlock learning, resilience, and achievement in any area of life.\n\n"
    )
        print("4. Mindset: The New Psychology of Success by Carol S. Dweck\n")

        krpr_choice(rvprv)
                
    elif books == 5:
        rvprv = print("Review: Reviews highlight its blunt, humorous style that challenges traditional positivity-focused self-help.\n"

    "Preview: Manson argues that embracing limitations and choosing what truly matters leads to a more meaningful life."
    )
        print("5. The Subtle Art of Not Giving a F*ck by Mark Manson\n")

        krpr_choice(rvprv)

#Initial Choices
def Ini_Choc():
    while True:
        ad_user = input("Type A for Admin Log in and type U for User Log in.\n")
        if ad_user == "A":
            admin_acc()
        elif ad_user == "U":
            coa()
#Admin Default Account
def admin_acc():
    a = 0
    while a < 3:
        print("  LOGIN YOUR ADMIN ACCOUNT  ")
        log = input("USERNAME: ")
        pw = input("PASSWORD: ")
        space()

        if log.lower() == "admin" and pw == "admin1234":
            print("Success Log in")
            book_choices()
            return True
        else:
            print(f"bulbul kaba?! hackerist yern? O may {2-a} kapa.")
            a += 1

        print("HECKER KABA???")
        return False


#Creation of Account
def coa():
    print("  CREATE YOUR ACCOUNT TO CONTIUE!  ")
    clog = input("Username: ")
    cpw = input("Password: ")
    space()
    return clog, cpw

#Account Library
def login_process(clog, pw):
    a = 0
    while a < 3:
        print("  LOGIN YOUR ACCOUNT  ")
        log = input("USERNAME: ")
        pw = input("PASSWORD: ")
        space()

        if log.lower() == clog.lower() and pw == cpw:
            print("Success Log in")
            book_choices()
            return True
        else:
            print(f"bulbul kaba?! hackerist yern? O may {2-a} kapa.")
            a += 1

    print("HECKER KABA???")
    return False

#Keep, Review and Preview, Return
def krpr_choice(rvprv):
    while True:
            kprr = input("a. Keep Book\nb. Preview and Review\nc. Return Book\nd. Go Back Selection\nSelect an Action: ")
            if kprr == 'a':
                print("blank")
            elif kprr == 'b':
                print(rvprv)
            elif kprr == 'c':
                print("blank")
            elif kprr == 'd':
                book_choices()    
            else: 
                print("Invalid Choice")

clog, cpw = coa()
login_process(clog, cpw)
rvprv = book_choices()
